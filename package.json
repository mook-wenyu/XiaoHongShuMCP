{
	"name": "hushops-servers-xiaohongshu",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"dev": "tsx src/cli.ts",
		"build": "tsc -p tsconfig.json",
		"mcp": "tsx src/mcp/server.ts",
		"build:test": "tsc -p tsconfig.json",
		"run:example": "tsx src/cli.ts --task=openAndScreenshot --payload={\"url\":\"https://example.com\"} --limit=2",
		"run:publish:example": "tsx src/cli.ts --task=xhs.publish --payload=@docs/examples/publish-payload.json",
		"demo:local": "tsx scripts/demo-local.ts",
		"smoke:actions": "tsx scripts/smoke-actions.ts",
		"xhs:open": "tsx scripts/xhs-open.ts",
		"cleanup:artifacts": "tsx scripts/cleanup-artifacts.ts",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "npm run build:test && vitest run",
		"test:roxy": "npm run build:test && vitest run tests/integration/roxy",
		"test:api": "npm run build:test && vitest run tests/integration/roxy/api.test.ts",
		"test:cdp": "npm run build:test && vitest run tests/integration/roxy/cdp.test.ts",
		"test:isolation": "npm run build:test && vitest run tests/integration/roxy/isolation.test.ts",
		"test:pool": "npm run build:test && vitest run tests/integration/roxy/connection-pool.test.ts",
		"check:env": "tsx scripts/check-env.ts",
		"test:workspace-id": "tsx scripts/test-workspace-id.ts",
		"mcp:call:navigate": "tsx scripts/mcp-call.ts --dirId=user",
		"mcp:call:search": "tsx scripts/mcp-call-search.ts --dirId=user --keyword=美食",
		"mcp:test:select-note": "tsx scripts/mcp-select-note.ts --dirId=user",
		"mcp:close-select": "tsx scripts/mcp-close-and-select.ts --dirId=user --keywords=美食,穿搭",
		"mcp:test:search-then-select": "tsx scripts/mcp-search-then-select.ts --dirId=user --keywords=美食,穿搭 --search=美食",
		"roxy:create-window": "tsx scripts/create-window.ts",
		"report:selectors": "tsx scripts/selector-health-report.ts",
		"bench:human": "tsx scripts/bench-humanization.ts",
		"smoke:local": "tsx scripts/open-and-screenshot-local.ts",
		"xhs:note:demo": "tsx scripts/xhs-note-actions-repro.ts",
		"postinstall": "playwright install chromium"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.20.1",

		"dotenv": "^16.4.5",
		"p-queue": "^8.0.1",
		"pino": "^9.3.2",
		"playwright": "^1.56.0",
		"undici": "^7.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^20.14.10",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.10.0",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"pino-pretty": "^11.3.0",
		"prettier": "^3.3.3",
		"tinybench": "^2.8.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	}
}
