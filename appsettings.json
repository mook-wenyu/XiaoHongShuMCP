{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "LogDirectory": "logs",
    "FileNameTemplate": "xiaohongshu-mcp-.txt",
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "standardErrorFromLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "UniversalApiMonitor": {
    "EnableDetailedLogging": true
  },
  "BaseUrl": "https://www.xiaohongshu.com/explore",
  "DefaultTimeout": 120000,
  "MaxRetries": 3,
  "BrowserSettings": {
    "Headless": false,
    "RemoteDebuggingPort": 9222,
    "ConnectionTimeoutSeconds": 30
  },
  "McpSettings": {
    "EnableProgressReporting": true,
    "MaxBatchSize": 10,
    "DelayBetweenOperations": 1000
  },
  "PageLoadWaitConfig": {
    "DOMContentLoadedTimeout": 15000,
    "LoadTimeout": 30000,
    "NetworkIdleTimeout": 600000,
    "MaxRetries": 3,
    "RetryDelayMs": 2000,
    "EnableDegradation": true,
    "FastModeTimeout": 10000
  },
  "SearchTimeoutsConfig": {
    "UiWaitMs": 12000,
    "ApiCollectionMaxWaitMs": 60000
  }
}
